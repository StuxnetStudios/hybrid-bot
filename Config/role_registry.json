{
  "Roles": [
    {
      "roleId": "summarizer",
      "typeName": "HybridBot.Roles.SummarizerRole",
      "configuration": {
        "summary_length": "medium",
        "include_sentiment": true,
        "focus_keywords": ["important", "key", "critical", "main"],
        "output_format": "structured",
        "priority": 70,
        "tags": ["summarization", "content", "analysis", "text-processing"],
        "metadata": {
          "description": "Summarizes long content and conversation history",
          "author": "HybridBot Team",
          "version": "1.0.0",
          "last_updated": "2025-06-28"
        }
      }
    },
    {
      "roleId": "responder",
      "typeName": "HybridBot.Roles.ResponderRole",
      "configuration": {
        "response_style": "friendly",
        "max_response_length": 200,
        "include_followup": true,
        "knowledge_domains": ["general", "technology", "help"],
        "fallback_enabled": true,
        "priority": 60,
        "tags": ["response", "conversation", "interaction", "dialogue"],
        "metadata": {
          "description": "Generates contextual responses to user inputs",
          "author": "HybridBot Team",
          "version": "1.0.0",
          "last_updated": "2025-06-28"
        }
      }
    },
    {
      "roleId": "test-role",
      "typeName": "HybridBot.Roles.TestRole",
      "configuration": {
        "test_mode": "demo",
        "response_delay": 0,
        "echo_input": true,
        "priority": 30,
        "tags": ["test", "demo", "debugging"]
      }
    },
    {
      "roleId": "adaptive-gaming",
      "typeName": "HybridBot.Roles.AdaptiveGamingRole",
      "configuration": {
        "game_mode": "adaptive",
        "difficulty_scaling": true,
        "coaching_style": "supportive",
        "strategy_focus": ["survival", "exploration", "skill_building"],
        "environmental_awareness": true,
        "priority": 85,
        "tags": ["gaming", "adaptive", "contextual", "strategic", "coaching"],
        "metadata": {
          "description": "Contextually-aware gaming assistant with adaptive strategies",
          "author": "HybridBot Team",
          "version": "1.0.0",
          "last_updated": "2025-06-28"
        }
      }
    }
  ],
  "global_settings": {
    "max_concurrent_roles": 5,
    "default_execution_mode": "FirstMatch",
    "enable_state_persistence": true,
    "log_level": "Information",
    "cleanup_interval_hours": 24
  }
}
