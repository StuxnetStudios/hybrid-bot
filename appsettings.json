{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "HybridBot": "Information",
      "Microsoft.SemanticKernel": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    }
  },
  "SkynetLite": {
    "BaseUrl": "http://localhost:8080",
    "ChatEndpoint": "/v1/chat/completions",
    "ModelId": "skynet-lite-v1",
    "ApiKey": "",
    "MaxTokens": 2000,
    "Temperature": 0.7,
    "TopP": 1.0,
    "FrequencyPenalty": 0.0,
    "PresencePenalty": 0.0,
    "TimeoutSeconds": 30,
    "MockMode": true
  },
  "HybridBot": {
    "StateDirectory": "./State",
    "ConfigDirectory": "./Config",
    "MaxConcurrentRoles": 5,
    "DefaultExecutionMode": "FirstMatch",
    "EnableStatePersistence": true,
    "CleanupIntervalHours": 24,
    "MaxConversationHistory": 100,
    "ResponseTimeout": 30000
  },
  "SemanticKernel": {
    "EnableAdaptivePlanning": true,
    "EnableResponseEnhancement": true,
    "StopOnStepFailure": false,
    "MinConfidenceThreshold": 0.7,
    "MaxExecutionSteps": 5
  },
  "Performance": {
    "MaxContentLength": 50000,
    "BatchSize": 10,
    "EnableParallelProcessing": false,
    "CacheEnabled": true,
    "CacheTTLMinutes": 60
  },
  "Features": {
    "SentimentAnalysis": true,
    "ContentCaching": true,
    "MetricsTracking": true,
    "ErrorRecovery": true,
    "SemanticKernelOrchestration": true
  }
}
